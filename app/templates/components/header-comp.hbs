<div class="header" {{bindAttr class=":l-section currentPath: siteScroll:is-scrolled" }}>
    <header>
        <!-- logo -->
        <div id="logo">
            {{ header/logo-molecule}}
        </div>
        <!-- end: logo -->
        <!-- main navigation -->
        <nav id="nav">
            {{ header/main-nav-molecule}}
            {{ header/account-nav-molecule}}
        </nav>
        <!-- end: main navigation -->
    </header>
    {{#if sub_menu}}
        {{renderFromVariable sub_menu}}
    {{/if}}
    {{#if display_message}}
        <div {{bindAttr class=":message l-full isError"}}>
            <a {{ action 'hideMessage' }} class="message-close" rel="close">&times;</a>

            <div class="message-content">
                {{ message_content }}
            </div>

        </div>
    {{/if}}
</div>